
pipeline {
    agent any

    environment {
        DEPLOY_PATH = "/home/username/simple-app" // change this to your server path
        GIT_URL = "https://github.com/your-username/simple-app.git"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: "${GIT_URL}"
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Test') {
            steps {
                sh 'npm test'
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying to server..."
                // Copy files to deployment path
                sh """
                    mkdir -p ${DEPLOY_PATH}
                    cp -r * ${DEPLOY_PATH}
                """
                
                // Restart app (if running with node)
                sh """
                    pkill -f 'node app.js' || true
                    nohup node ${DEPLOY_PATH}/app.js > ${DEPLOY_PATH}/app.log 2>&1 &
                """
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
